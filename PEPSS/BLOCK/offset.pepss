// == RULE

// -- OFFSET

%offset_left(
    $left_offset
    )
{
    position: relative;
    left: $left_offset;
}

%offset_right(
    $right_offset
    )
{
    position: relative;
    right: $right_offset;
}

%offset_top(
    $top_offset
    )
{
    position: relative;
    top: $top_offset;
}

%offset_bottom(
    $bottom_offset
    )
{
    position: relative;
    bottom: $bottom_offset;
}

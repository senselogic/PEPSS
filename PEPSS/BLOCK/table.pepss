// == RULE

// -- CONTAINER

@table_container(
    $maximum_width = null,
    $width = null
    )
{
	display: table;
	
    & > *
    {
        display: table-cell;
        vertical-align: top;
    }
    
    if $maximum_width != null
    {
        margin: 0 auto;
        max-width: $maximum_width;
    }
    
    if $width != null
    {
        width: $width;
    }
}

// -- LAYOUT

@table_layout(
    $layout
    )
{
    table-layout: $layout;
}

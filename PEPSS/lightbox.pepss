// == RULE

// -- SCREEN

#lightbox_media
{
    :display( table );
    :position( fixed );
    :position_top( 0 );
    :position_left( 0 );
    :width( 100% );
    :height( 100% );
    :background_color( rgba( 0, 0, 0, 0.8 ) );
}

// -- CONTAINER

#lightbox_container
{
    :display( table-cell );
    :text_align( center );
    :text_align( middle );
}

// -- IMAGE

#lightbox_image
{
    :width( 90% );
}
